# Tells the .editorconfg plugin to stop searching once it finds this file
root = true

[*]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx}]
quote_type = single

[*.{py,java}]
indent_size = 4

[Makefile]
indent_style = tab
